# 数据库配置
DATABASE_URL=postgres://echo_user:echo_password@localhost:10035/echo_db
POSTGRES_DB=echo_db
POSTGRES_USER=echo_user
POSTGRES_PASSWORD=echo_password

# Redis 配置
REDIS_URL=redis://:redis_password@localhost:10036
REDIS_PASSWORD=redis_password

# JWT 配置
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION_HOURS=24

# EchoKit Server 配置 (使用外部服务)
# 默认使用 indie.echokit.dev 提供的免费服务
ECHOKIT_WEBSOCKET_URL=wss://indie.echokit.dev/ws/
ECHOKET_API_BASE_URL=https://indie.echokit.dev

# MQTT 配置
MQTT_BROKER_URL=tcp://localhost:10039

# 网络端口配置
API_GATEWAY_PORT=10033
WEBSOCKET_PORT=10031
UDP_PORT=10032
WEB_MANAGEMENT_PORT=10034
POSTGRES_PORT=10035
REDIS_PORT=10036
PGADMIN_PORT=10037
REDIS_COMMANDER_PORT=10038
MQTT_PORT=10039
MQTT_WS_PORT=10040

# 管理界面配置
PGADMIN_DEFAULT_EMAIL=admin@echo-system.com
PGADMIN_DEFAULT_PASSWORD=admin123
REDIS_COMMANDER_USER=admin
REDIS_COMMANDER_PASSWORD=admin123

# CORS 配置
CORS_ORIGINS=http://localhost:10034,http://localhost:3000

# 日志配置
RUST_LOG=info
LOG_LEVEL=info

# 环境配置
NODE_ENV=production
RUST_ENV=production

# API 配置
REACT_APP_API_BASE_URL=http://localhost:10033
REACT_APP_WS_URL=ws://localhost:10033

# 健康检查配置
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3
HEALTH_CHECK_START_PERIOD=40s